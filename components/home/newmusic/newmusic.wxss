.hot-title {
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 30rpx;
  color: #fff;
  border-left: 5px solid #b11b1b;
  padding-left: 10rpx;
}

.musicBox {
  margin-top: 15rpx;
  width: 100%;
}

.musicBox .musicBox-item {
  display: flex;
  padding: 10rpx 20rpx;
  justify-content: space-between;
  border-bottom: 5rpx solid rgba(236, 236, 236, 0.7);
  margin: 10rpx 10rpx;
}

.musicBox .musicBox-item .txtBox {
  display: flex;
  flex-direction: column;
}

.musicBox .musicBox-item .txtBox .songname {
  font-size: 25rpx;
  width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
}

.musicBox .musicBox-item .txtBox .singname {
  font-size: 20rpx;
  color: rgb(233, 233, 233);
}
