.imgshow {
  position: relative;
  width: 100%;
  height: 600rpx;
  overflow: hidden;
}

.imgshow image {
  position: absolute;
  width: 100%;
  display: block;
  object-fit: cover;
}

.imgshow .txtbox {
  position: absolute;
  bottom: 10%;
  left: 30rpx;
  text-shadow: 0px 1px 8rpx black;
}

.imgshow .txtbox .name {
  font-size: 50rpx;
  color: white;
  font-weight: bold;
}

.imgshow .txtbox .txt {
  font-size: 30rpx;
  color: #fff;
}

.brief {
  margin: 20rpx;
  margin-left: 0;
  font-size: 35rpx;
  font-weight: bold;
  line-height: 30rpx;
  color: #333;
  border-left: 2px solid #b11b1b;
  padding-left: 30rpx;
}

.content {
  font-size: 26rpx;
  padding: 0 30rpx;
  color: #666;
  height: 100rpx;
  position: relative;
  line-height: 20px;
  overflow: hidden;
}

.hot-title {
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 30rpx;
  color: #333;
  border-left: 2px solid #b11b1b;
  padding-left: 10rpx;
}

.musicBox {
  margin-top: 15rpx;
  width: 100%;
}

.musicBox .musicBox-item {
  display: flex;
  padding: 10rpx 20rpx;
  justify-content: space-between;
  border-bottom: 5rpx solid rgba(236, 236, 236, 0.7);
  margin: 10rpx 10rpx;
}

.musicBox .musicBox-item .txtBox {
  display: flex;
  flex-direction: column;
}

.musicBox .musicBox-item .txtBox .songname {
  font-size: 25rpx;
  width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.musicBox .musicBox-item .txtBox .singname {
  font-size: 20rpx;
  color: #777;
}

.musicBox .bottomText {
  font-size: 20rpx;
  color: #777;
  text-align: center;
  margin: 40rpx 0;
}

.showText {
  font-size: 20rpx;
  color: #777;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
