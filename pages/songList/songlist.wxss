/* pages/songList/songlist.wxss */
page {
  box-sizing: border-box;
  padding: 15rpx 0rpx;
  position: relative;
  background-image: url("https://wallpaperm.cmcm.com/7835ffbc8c9db87ead0e6079ae1412c1.jpg");
}

page::before {
  content: '';
  position: absolute;
  top: 0rpx;
  left: 0;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0.5;
}

::-webkit-scrollbar {
  display: none;
}

.hot-title {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 30rpx;
  color: #fff;
  border-left: 5px solid #b11b1b;
  padding-left: 10rpx;
}

.singer-hot-list {
  height: 300rpx;
  display: flex;
  overflow: auto;
  align-items: center;
}

.singer-hot-list .singer-item {
  width: 200rpx;
  text-align: center;
  margin-right: 10rpx;
  border-radius: 10rpx;
}

.singer-hot-list .singer-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.singer-hot-list .singer-item text {
  color: #e6e1e1;
  font-size: 28rpx;
}
